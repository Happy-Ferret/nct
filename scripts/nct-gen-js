#!/bin/bash

#
# Copyright (C) 2016 nCrux
# Author: Aditi <aditi@ncrux.com>
#

#
# Generates JavaScript file with key/value pairs
#

awk '
BEGIN {
	add_quotes_to_int = 0;
	add_quotes_to_hex = 0;
	convert_hex_to_int = 0;
	printf "/*\n *\n * Automatically generated file using nCrux Configuration Tool (nct).\n * DO NOT EDIT.\n *\n */\n";
	print "module.exports.nct = {\n";
}

END {
	print "};\n";
}

# Ignore blank lines
/^$/ { next; }

# Ignore comments
/^#/ { next; }

/^NCT_/ {

	i = index($0, "=");

	# Strip off NCT_ prefix
	w1 = substr($0, 5, i-5);
	w2 = substr($0, i+1);

	if (w2 ~ /^0x/) {

		# Hex value
		#substr(w2,1,2) == "0x") {
		if(convert_hex_to_int) {
			w2 = strtonum(w2);
		}

		if(add_quotes_to_hex) {
			w2 = "\"" w2 "\"";
		}

	} else if (w2 ~ /^[0-9]+/) {

		# Integer Value
		if(add_quotes_to_int) {
			w2 = "\"" w2 "\"";
		}

	} else if (w2 ~ /^[nym]+/) {

		# Boolean or Tristate Value
		w2 = "\"" w2 "\"";

	} else if (w2 ~ /^"/) {

		# String Value
	}
}

# Ruby File with key/value pairs
/^NCT_/ {
	print "\t\"" w1 "\" : " w2 ",";
	next;
}


' $1 > $2

exit 0
