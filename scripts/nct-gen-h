#!/bin/bash

#
# Copyright (C) 2016 nCrux
# Author: Aditi <aditi@ncrux.com>
#

#
# Generates C Header file for a given configuration file
#

awk '
BEGIN {
	FS = "=";
	printf "/*\n *\n * Automatically generated file using nCrux Configuration Tool (nct).\n";
	printf " * http://www.ncrux.com/project/nct/\n * DO NOT EDIT.\n *\n */\n";
}

# Ignore blank lines
/^$/ { next; }

# Ignore comments
/^#/ { next; }

# Split valid lines into two words: w1 and w2
{
	i = index($0, "=");
	w1 = substr($0, 1, i-1);
	w2 = substr($0, i+1);
}

/* C Header File */
{
	if (w2 == "y") {
		print "#define " w1 " 1";
	} else if(w2 == "m") {
		print "#define " w1 "_MODULE 1";
	} else {
		print "#define " w1 " " w2;
	}
	next;
}


' $1 > $2

exit 0
