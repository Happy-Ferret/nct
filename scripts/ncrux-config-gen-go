#!/bin/bash

#
# Copyright (C) 2016 nCrux
# Author: Aditi <aditi@ncrux.com>
#

#
# Generates golang file with key/value pairs in a map
#

export PKGNAME=`basename $2 | sed -e 's/.go$//g'`

awk -v pkg_name=$PKGNAME '
BEGIN {
	add_quotes_to_int = 1;
	add_quotes_to_hex = 1;
	convert_hex_to_int = 0;
	printf "package " pkg_name "\n//\n//\n// Automatically generated file using ncrux-config; DO NOT EDIT.\n//\n//\n";
	print "var Config = map[string]string {\n";
}

END {
	print "}\n";
}

# Ignore blank lines
/^$/ { next; }

# Ignore comments
/^#/ { next; }

# Split valid lines into two words: w1 and w2
/^NCONFIG_/ {

	i = index($0, "=");

	# Strip off NCONFIG_ prefix
	w1 = substr($0, 9, i-9);
	w2 = substr($0, i+1);

	if (w2 ~ /^0x/) {

		# Hex value
		#substr(w2,1,2) == "0x") {
		if(convert_hex_to_int) {
			w2 = strtonum(w2);
		}

		if(add_quotes_to_hex) {
			w2 = "\"" w2 "\"";
		}

	} else if (w2 ~ /^[0-9]+/) {

		# Integer Value
		if(add_quotes_to_int) {
			w2 = "\"" w2 "\"";
		}

	} else if (w2 ~ /^[nym]+/) {

		# Boolean or Tristate Value
		w2 = "\"" w2 "\"";

	} else if (w2 ~ /^"/) {

		# String Value
	}
}

# Golang File with key/value pairs in a map
/^NCONFIG_/ {
	print "\t\"" w1 "\" : " w2 ",";
	next;
}


' $1 > $2

exit 0
