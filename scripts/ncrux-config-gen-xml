#!/bin/bash

#
# Copyright (C) 2016 nCrux
# Author: Aditi <aditi@ncrux.com>
#

#
# Generates an XML file for a given configuration file
#

awk '
BEGIN {
	add_quotes_to_int = 0;
	add_quotes_to_hex = 0;
	convert_hex_to_int = 0;
	printf "<?xml version=\"1.0\" standalone=\"yes\"?>\n\n"
	printf "<!--\n Automatically generated file using ncrux-config; DO NOT EDIT.\n-->\n";
	printf "<ncrux-config>\n";
}

END {
	printf "</ncrux-config>\n";
}

# Ignore blank lines
/^$/ { next; }

# Ignore comments
/^#/ { next; }

# Split valid lines into two words: w1 and w2
/^NCONFIG_/ {

	i = index($0, "=");

	# Strip off NCONFIG_ prefix
	w1 = substr($0, 9, i-9);
	w2 = substr($0, i+1);

	if (w2 ~ /^0x/) {

		# Hex value
		#substr(w2,1,2) == "0x") {
		if(convert_hex_to_int) {
			w2 = strtonum(w2);
		}

		if(add_quotes_to_hex) {
			w2 = "\"" w2 "\"";
		}

	} else if (w2 ~ /^[0-9]+/) {

		# Integer Value
		if(add_quotes_to_int) {
			w2 = "\"" w2 "\"";
		}

	} else if (w2 ~ /^[nym]+/) {

		# Boolean or Tristate Value
		w2 = "\"" w2 "\"";

	} else if (w2 ~ /^"/) {

		# String Value
	}
}


/* XML File */
{
	if (w2 ~ /^"/) {

		# String Value
		len = length(w2);
		w2 = substr(w2,2,len-2);

		# FIXME: encode the string
	}

	print "\t<" w1 ">" w2 "</" w1 ">";
	next;
}


' $1 > $2

exit 0
